/* pages/setting/setting.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  min-height: 100vh;
  background-color: #efeff4;
}

.category-item {
  width: 100%;
  margin: 20rpx 0;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  background-color: #fff;
}

.category-item.personal-info {
  display: flex;
  height: 130rpx;
  padding: 20rpx 0;
}

.category-item.personal-info .user-avatar {
  position: relative;
  width: 130rpx;
  height: 130rpx;
  margin: 0 30rpx;
}

.category-item.personal-info .user-avatar image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  border-radius: 2rpx;
  vertical-align: top;
}

.category-item.personal-info .user-name {
  flex: 1;
  margin-right: 30rpx;
  padding-top: 10rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  height: 85rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid RGBA(217, 217, 217, 0.4);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item image {
  width: 40rpx;
  height: 40rpx;
}

.detail-item text {
  flex: 1;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #7f8389;
}

.detail-item .detail-item-btn {
  width: 50rpx;
  height: 40rpx;
  margin-right: 20rpx;
  color: #d9d9d9;
  text-align: center;
}

.detail-item .detail-item-btn::after {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  content: '';
  margin-top: 8rpx;
  border: 3rpx #d9d9d9 solid;
  border-top-color: transparent;
  border-left-color: transparent;
  color: #d9d9d9;
  transform: rotate(-45deg);
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  min-height: 100vh;
  background-color: #EFEFF4;
}

.category-item {
  width: 100%;
  margin: 20rpx 0;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  background-color: #FFFFFF;
}

.detail-item {
  display: flex;
  align-items: center;
  height: 85rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid RGBA(217, 217, 217, 0.4);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item text {
  flex: 1;
  font-size: 24rpx;
  color: #7F8389;
}

.detail-item text:last-child {
  flex: 1;
  padding-right: 20rpx;
  font-size: 24rpx;
  color: #7F8389;
  text-align: right;
}

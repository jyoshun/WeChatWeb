/* 电影首页的样式 */
@import "movie-list/movie-list-tpl.wxss";
@import "movie-grid/movie-grid-tpl.wxss";

.container {
  background-color: #f2f2f2;
}

.movies-template {
  margin-bottom: 30rpx;
}

/* 电影搜索样式 */

.search {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background-color: #f2f2f2;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search input {
  width: 600rpx;
  height: 100%;
  margin-left: 20px;
  font-size: 28rpx;
}

.placeholder {
  margin-left: 20rpx;
  font-size: 14px;
  color: #d1d1d1;
}

.search-panel {
  position: absolute;
  top: 80rpx;
}

.xx-img {
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 10rpx;
}

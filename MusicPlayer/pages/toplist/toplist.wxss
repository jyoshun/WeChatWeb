.song-list {
  padding-left: 50px;
  background: #000;
}

.song-item {
  position: relative;
  padding: 10px 10px 10px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.5);
}

.song-index {
  position: absolute;
  left: -40px;
  width: 40px;
  color: #fff;
  font-size: 20px;
  text-align: center;
  line-height: 50px;
}

.song-item-title {
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
}

.song-item-text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.75);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
